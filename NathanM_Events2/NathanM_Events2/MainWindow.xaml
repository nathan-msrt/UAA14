<Window x:Class="NathanM_Events2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NathanM_Events2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Brown">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="txtBatiment"  Margin="10,10,10,10" Header="TYPE DE LOGEMENT" FontSize="20" Grid.RowSpan="2" Grid.ColumnSpan="2" Foreground="Beige">
            <StackPanel>
                <CheckBox Margin="0,25,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Foreground="Beige">Chalet</CheckBox>
                <CheckBox Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Foreground="Beige">Tente</CheckBox>
            </StackPanel>
        </GroupBox>
        
        
        <GroupBox x:Name="txtSejour"  Margin="-50,20,30,10" Header="CARACTERISTIQUES DU SEJOUR" FontSize="24" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="4" Foreground="Beige"></GroupBox>
        <GroupBox x:Name="txtResultat"  Margin="10,10,10,10" Header="RESULTAT" FontSize="24" Grid.Row="3" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="4" Foreground="Beige" ></GroupBox>
    </Grid>
</Window>
